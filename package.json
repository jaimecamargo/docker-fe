    "react-dom": "^16.4.2",
    "react-router-dom": "^4.3.1",
    "redux-saga": "^0.16.0",
    "redux-thunk": "^2.3.0",
    "reselect": "^3.0.1",
    "socket.io": "^2.1.1",
