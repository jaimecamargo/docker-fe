{
  "name": "sample-typescript-pods",
  "version": "1.0.0",
  "description": "In this example we will reorganize the project architecture following a pod approach.",
  "main": "index.js",
  "scripts": {
    "start": "npm run start:dev",
    "start:dev": "nodemon --watch webpack.*.js --exec \"webpack-dev-server --config webpack.dev.js\"",
    "start:prod": "nodemon --watch webpack.*.js --exec \"webpack-dev-server --config webpack.prod.js\"",
    "build": "npm run build:dev",
    "build:dev": "rimraf dist && webpack --config webpack.dev.js",
    "build:prod": "rimraf dist && webpack -p --config webpack.prod.js",
    "test": "jest --verbose",
    "test:watch": "npm test -- --watch -i"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.2",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@types/jest": "^24.0.23",
    "@types/react": "^16.14.60",
    "@types/react-dom": "^16.9.24",
    "@types/react-redux": "^6.0.6",
    "@types/react-router-dom": "^4.3.0",
    "@types/socket.io-client": "^1.4.32",
    "awesome-typescript-loader": "^5.2.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-loader": "^8.3.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-react": "^6.24.1",
    "browserslist": "^4.23.2",
    "html-webpack-plugin": "^3.2.0",
    "ignore-loader": "^0.1.2",
    "jest": "^24.9.0",
    "node-loader": "^1.0.1",
    "nodemon": "^1.18.3",
    "react-redux": "^5.0.7",
    "redux": "4.0.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^24.2.0",
    "ts-lint": "^4.5.1",
    "typescript": "3.0.3",
    "webpack": "^4.16.4",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.7.2",
    "webpack-merge": "^4.1.4"
  },
